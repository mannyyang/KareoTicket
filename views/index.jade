extends layout

block head
	meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
	title Kareo Web Requests
	link(rel='stylesheet', href='http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css')
	link(rel='stylesheet', href='/bower_components/angular-material/angular-material.min.css')
	link(rel='stylesheet', href='/bower_components/angular-material/themes/orange-theme.css')
	link(rel='stylesheet', href='/styles/main.css')

	script(src="/bower_components/angular/angular.min.js")
	script(src="/bower_components/angular-aria/angular-aria.min.js")
	script(src="/bower_components/angular-animate/angular-animate.min.js")
	script(src="/bower_components/hammerjs/hammer.js")
	script(src="/bower_components/angular-material/angular-material.min.js")

block header
	header(layout="row", layout-margin, flex)
		div.logo-container(flex=25)
			img.logo(src="http://www.kareo.com/img/logo.png")
		h1.app-title(flex) Kareo

block content
	section.app-content(layout="row", layout-margin, flex, ng-controller="ProjectsCtrl as projects")
		mixin status(status, name)
			md-whiteframe.md-whiteframe-z1(layout="columns", flex)
				md-content(class="status status-"+status, flex)
					md-subheader.md-whiteframe-z2.status-title
						h2= name
					md-list.status-projects
						md-item(ng-repeat="(key, value) in projects.projects")
							md-item-content
								div.md-tile-left
								div.md-tile-content
									span.project-title {{value.title}}
									span.project-owner {{value.fields["project-owner"].values[0].value.name}}
									span.project-deadline {{value.fields["start-and-finish-dates"].values[0].start}}
							md-divider

		+status('submitted', 'SUBMITTED')
		+status('inprogress', 'IN PROGRESS')
		+status('ready', 'READY FOR TESTING')
		+status('completed', 'COMPLETED')

block scripts

	script(src="/app/app.js")
	script(src="/app/controllers/ProjectsCtrl.js")